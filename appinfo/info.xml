<?xml version="1.0"?>
<info>
    <id>phonetrack</id>
    <name>PhoneTrack</name>
    <summary> </summary><description> </description>
    <version>1.0.0</version>
    <licence>agpl</licence>
    <author mail="julien-nc@posteo.net">Julien Veyssier</author>
    <namespace>PhoneTrack</namespace>
    <documentation>
        <user>https://github.com/julien-nc/phonetrack/blob/main/doc/user.md</user>
        <admin>https://github.com/julien-nc/phonetrack/blob/main/doc/admin.md</admin>
        <developer>https://github.com/julien-nc/phonetrack/blob/main/doc/dev.md</developer>
    </documentation>
    <category>tools</category>
    <category>social</category>
    <category>multimedia</category>
    <website>https://github.com/julien-nc/phonetrack</website>
    <bugs>https://github.com/julien-nc/phonetrack/issues</bugs>
    <screenshot>https://github.com/julien-nc/phonetrack/raw/main/img/screenshot1.jpg</screenshot>
    <screenshot>https://github.com/julien-nc/phonetrack/raw/main/img/screenshot2.jpg</screenshot>
    <screenshot>https://github.com/julien-nc/phonetrack/raw/main/img/screenshot3.jpg</screenshot>
    <dependencies>
        <nextcloud min-version="30" max-version="32"/>
    </dependencies>
    <background-jobs>
        <job>OCA\PhoneTrack\Cron\AutoExport</job>
    </background-jobs>
    <settings>
        <admin>OCA\PhoneTrack\Settings\Admin</admin>
    </settings>
	<commands>
		<command>OCA\PhoneTrack\Command\AutoExport</command>
	</commands>
    <activity>
        <settings>
            <setting>OCA\PhoneTrack\Activity\Setting</setting>
            <setting>OCA\PhoneTrack\Activity\GeofenceSetting</setting>
            <setting>OCA\PhoneTrack\Activity\ProximitySetting</setting>
        </settings>
        <filters>
            <filter>OCA\PhoneTrack\Activity\Filter</filter>
        </filters>
        <providers>
            <provider>OCA\PhoneTrack\Activity\PhonetrackProvider</provider>
        </providers>
    </activity>
    <navigations>
        <navigation>
            <id>phonetrack</id>
            <name>Phonetrack</name>
            <route>phonetrack.page.index</route>
            <icon>app.svg</icon>
            <order>10</order>
        </navigation>
    </navigations>
</info>
